<%= provide(:title, "Create A Cause") %>

<div class="wrapper">
  <div class="container">
    <div class="form-container padding-vertical">


      <div class="padding-bottom sub-title">
        Create a cause
      </div>

      <div class="padding-top">
        <%= form_for(@cause, url: element_causes_path) do |f| %>

          <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_large_top %>
            <%= f.text_field :image_large_top, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_description %>
            <%= f.text_field :image_description, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_important %>
            <%= f.text_field :image_important, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_disaster %>
            <%= f.text_field :image_disaster, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_large_bottom %>
            <%= f.text_field :image_large_bottom, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_plan %>
            <%= f.text_field :image_plan, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :image_product %>
            <%= f.text_field :image_product, class: "text-field" %>
          </div>

          <div class="field">
            <%= f.label :mini_description %>
            <%= f.text_area :mini_description, class: "text-area" %>
          </div>

          <div class="field">
            <%= f.label :description %>
            <%= f.text_area :description, class: "text-area" %>
          </div>

          <div class="field">
            <%= f.label :important %>
            <%= f.text_area :important, class: "text-area" %>
          </div>

          <div class="field">
            <%= f.label :disaster %>
            <%= f.text_area :disaster, class: "text-area" %>
          </div>

          <div class="field">
            <%= f.label :plan %>
            <%= f.text_area :plan, class: "text-area" %>
          </div>

          <div class="field">
            <%= f.label :raised %>
            <%= f.text_area :raised, class: "text-area" %>
          </div>

          <%= f.submit "Create cause", data: { disable_with: 'Creating...' }, class: "button" %>
        <% end %>
      </div>


    </div>
  </div>
</div>
